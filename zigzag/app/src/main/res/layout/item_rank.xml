<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:id="@+id/rankitem_cl_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorMenuBackground">
    
    <TextView
        android:id="@+id/rankitem_tv_num"
        android:layout_width="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="1"
        android:textSize="19sp"
        android:gravity="center"
        android:textColor="@color/rankNumColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/rankitem_iv_img"
        app:layout_constraintStart_toEndOf="@id/rankitem_tv_num"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="10dp"
        android:scaleType="centerCrop"
        android:background="@drawable/allround_shape_transparent"
        android:layout_width="45dp"
        android:layout_height="45dp"/>

    <TextView
        android:id="@+id/rankitem_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@+id/rankitem_iv_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rankitem_tv_tag"
        android:text="핫핑"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="#FFFFFF"/>
    <TextView
        android:id="@+id/rankitem_tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/colorRankOrange"
        android:text=""
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rankitem_tv_name"
        app:layout_constraintStart_toStartOf="@id/rankitem_tv_name"/>



</androidx.constraintlayout.widget.ConstraintLayout>